{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "create-block/document-viewer",
	"version": "0.1.0",
	"title": "Document Viewer",
	"category": "widgets",
	"icon": "media-document",
	"description": "A block to view documents such as PDF, Markdown, DOCX, and Excel.",
	"example": {},
	"supports": {
		"html": false
	},
	"textdomain": "document-viewer",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"attributes": {
		"docType": {
			"type": "string",
			"default": "pdf"
		},
		"docUrl": {
			"type": "string",
			"default": ""
		},
		"showDownloadButton": {
			"type": "boolean",
			"default": true
		},
		"downloadButtonText": {
			"type": "string",
			"default": "Download the Document"
		}
	}
}
